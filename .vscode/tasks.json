{
    "version": "2.0.0",
    "tasks": [{
        "label": "Compile Fortran",
        "type": "shell",
        "command": "mkdir -p build && cd build && gfortran", 
        "args": [
            "-g", "-Wall", 
            "../${fileBasename}", 
            "-o", "${fileBasenameNoExtension}.exe"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }]
}
